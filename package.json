{
  "name": "coinietrade-proxy",
  "version": "0.0.1",
  "repository": "https://github.com/keidrun/coinietrade-proxy.git",
  "author": "Keid",
  "license": "No License",
  "devDependencies": {
    "npm-run-all": "^4.1.2"
  },
  "scripts": {
    "env:reset": "cp -rf ../coinietrade-env/proxy/.env .",
    "env:tree": "git -C ../coinietrade-env/proxy/ tree",
    "env:status": "git -C ../coinietrade-env/proxy/ status",
    "env:diff": "diff .env ../coinietrade-env/proxy/.env || :",
    "env:commit":
      "cp -rf .env ../coinietrade-env/proxy/ && git -C ../coinietrade-env/proxy/ commit -am 'Update env file.'",
    "erb":
      "NGINX_WORKERS=1 PORT=8080 HEROKU_APP_DOMAIN=coinietradefront_web_1:5000 MAINT_FLAG=false erb config/nginx.conf.erb > config/nginx.conf",
    "proxy:down": "docker-compose down",
    "proxy:build": "docker-compose build --no-cache",
    "proxy:up": "docker-compose up -d",
    "proxy": "npm-run-all -s proxy:*",
    "ps": "docker-compose ps",
    "logs": "docker-compose logs",
    "sh": "docker-compose exec proxy sh",
    "prod:build":
      "docker-compose -f docker-compose.heroku.yml build --no-cache proxy",
    "prod:push":
      "docker push `node -pe \"require('dotenv').config().parsed.PROD_HEROKU_REGISTRY\"`/`node -pe \"require('dotenv').config().parsed.PROD_HEROKU_APP\"`/`node -pe \"require('dotenv').config().parsed.PROD_HEROKU_PROCESS_TYPE\"`:`node -pe \"require('dotenv').config().parsed.TAG\"`",
    "prod": "npm-run-all -s prod:*"
  }
}
